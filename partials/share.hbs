<ul class='share-list'>
  <li>
    <a class='share-list__link'
       title='{{t "Share on Twitter" }}'
       aria-label='{{t "Share on Twitter" }}'
       href='https://twitter.com/share?text={{ encode title }}&amp;url={{ url absolute='true' }}'
       onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
      <div data-icon='ei-sc-twitter' data-size='s' class='share-list__icon share-list__icon--twitter'></div>
    </a>
  </li>

  <li>
    <a class='share-list__link'
       title='{{t "Share on Facebook" }}'
       aria-label='{{t "Share on Facebook" }}'
       href='https://www.facebook.com/sharer/sharer.php?u={{ url absolute='true' }}'
       onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
    <div data-icon='ei-sc-facebook' data-size='s' class='share-list__icon share-list__icon--facebook'></div>
    </a>
  </li>

  <li class='c-share__item'>
    <a class='share-list__link'
       title='{{t "Share via Email" }}'
       aria-label='{{t "Share via Email" }}'
       href="mailto:?subject={{ encode title }}&body={{ url absolute='true' }}">
      <div data-icon='ei-envelope' data-size='s' class='share-list__icon'></div>
    </a>
  </li>
</ul>