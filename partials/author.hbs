{{! Everything inside the #author tags pulls data from the author }}

{{#author}}
<div class="box box--author">

  {{#if image}}
  <figure class="author-image">
    <div class="img" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></div>
  </figure>
  {{/if}}

  <div class="box__body">

    <h4 class="box__title">
      <a href="{{url}}">{{name}}</a>
    </h4>

    {{#if bio}}
    <p class="box__text">{{bio}}</p>
    {{/if}}

    <div class="author-meta box__text">
      {{#if twitter}}
        <div class="inline-block">
          <a href="{{ twitter_url }}" target="_blank">
            <span data-icon="ei-sc-twitter" data-size="s"></span>
          </a>
        </div>
      {{/if}}

      {{#if facebook}}
        <div class="inline-block">
          <a href="{{facebook_url}}" target="_blank">
            <span data-icon="ei-sc-facebook" data-size="s"></span>
          </a>
        </div>
      {{/if}}

      {{#if website}}
        <div class="inline-block">
          <a href="{{website}}">
            <span data-icon="ei-link" data-size="s"></span>
          </a>
        </div>
      {{/if}}

      {{#if location}}
        <div class="inline-block">
          <span data-icon="ei-location" data-size="s"></span>
          {{location}}
        </div>
      {{/if}}
    </div>

  </div>

</div>
{{/author}}