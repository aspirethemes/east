<div class='sidebar'>
  <div class='row'>

    <div class='column small-10 large-12'>
      {{#if @site.logo}}
        <a class='logo' href='{{ @site.url }}'><img class='logo__img' src='{{ @site.logo }}' alt='{{ @site.title }}'></a>
      {{else}}
        <a href='{{ @site.url }}' class='logo'>{{ @site.title }}</a>
      {{/if}}
      <div class='sidebar__description font-small'>{{ @site.description }}</div>
    </div>

    <div class='off-canvas-toggle'><span data-icon='ei-navicon' data-size='s'></span></div>

    <div class='off-canvas-content'>

      <div class='column large-12'>
        <nav class='navigation'>
          <ul class='list-bare text-center'>
            {{ navigation }}
            {{#if @labs.members}}
              {{#if @member}}
                <li><a href='/account/' class='c-nav__link'>{{t 'Account' }}</a></li>
                <li><a href='#signout' class='c-nav__link' data-members-signout>{{t 'Log Out' }}</a></li>
              {{else}}
                <li><a href='/signin/'>{{t 'Log In' }}</a></li>
                <li><a href='/signup/' class='regular u-link'>{{t 'Subscribe' }}</a></li>
              {{/if}}
            {{/if}}
            <li><a class='subscribe-button icon-feed' href='{{ @site.url }}/rss/'>RSS</a></li>
          </ul>
        </nav>
      </div>

      <div class='column large-12'>
        <ul class='social-nav social-icons'>
          {{# if @site.twitter}}
            <li>
              <a href='{{ twitter_url }}' aria-label='Twitter' target='_blank' rel='noopener noreferrer'>
                <span data-icon='ei-sc-twitter' data-size='s'></span>
              </a>
            </li>
          {{/if}}
          {{# if @site.facebook}}
            <li>
              <a href='{{ facebook_url }}' aria-label='Facebook' target='_blank' rel='noopener noreferrer'>
                <span data-icon='ei-sc-facebook' data-size='s'></span>
              </a>
            </li>
          {{/if}}
          <li>
            <a href='https://instagram.com/{{! Add Instagram handle }}' aria-label='Instagram' target='_blank' rel='noopener noreferrer'>
              <span data-icon='ei-sc-instagram' data-size='s'></span>
            </a>
          </li>
          <li>
            <a href='#' class='toggle-search-button' aria-label='{{t "Search" }}'>
              <span data-icon='ei-search' data-size='s'></span>
            </a>
          </li>
        </ul>
      </div>

      <div class='sidebar__copy'>
        <div class='column large-12'>
          <div class='font-tiny'>
            &copy; {{ date format='YYYY' }} {{ @site.title }} - {{{t "Published with {ghostlink}" ghostlink="<a class='color-grey' href=\"https://ghost.org\">Ghost</a>" }}}
          </div>
        </div>
      </div>

    </div> {{! off-canvas-content }}

  </div> {{! row }}
</div> {{! sidebar }}

{{> search-form}}